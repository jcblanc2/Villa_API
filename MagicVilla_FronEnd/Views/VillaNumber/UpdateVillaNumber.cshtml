@model MagicVilla_FronEnd.Models.ViewModel.VillaNumberUpdateView


<form asp-action="UpdateVillaNumber">
    <br />
    <di class="container border p-3">
        <h1 class="text-primary">Update Villa Number</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="control-label p-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="VillaNumber.VillaNo" disabled class="form-control" />
                <span asp-validation-for="VillaNumber.VillaNo" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.VillaID" class="control-label p-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumber.VillaID" class="form-select" asp-items="@Model.VillaList">
                    <option disabled selected>-- Select Villa --</option>
                </select>
                <span asp-validation-for="VillaNumber.VillaID" class="text-danger"></span>
            </div>

           <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label p-2" style="font-size:20px"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="VillaNumber.SpecialDetails" class="form-control" row="5"></textarea>
                <span asp-validation-for="VillaNumber.SpecialDetails" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <a asp-controller="VillaNumber" asp-action="IndexVillaNumber" class="btn-primary btn form-control">Back to List</a>
            </div>

            <div class="col-5">
                <input type="submit" value="Update" class="btn-success btn form-control" />
            </div>
        </div>
    </di>

</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}